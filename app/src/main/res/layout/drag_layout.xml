<!-- Layout description of the DragAndDrop sample's main activity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dot="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingTop="120dp"
    android:paddingBottom="60dp">

    <RelativeLayout
        android:id="@+id/drag_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/drag_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/drag_explanation" />

        <com.example.android.apis.view.DraggableDot
            android:id="@+id/drag_dot_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drag_explanation"
            android:padding="15dp"
            dot:radius="64dp" />

        <com.example.android.apis.view.DraggableDot
            android:id="@+id/drag_dot_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drag_explanation"
            android:layout_toEndOf="@id/drag_dot_1"
            android:padding="15dp"
            dot:anr="thumbnail"
            dot:legend="Drag ANR"
            dot:radius="64dp" />

        <com.example.android.apis.view.DraggableDot
            android:id="@+id/drag_dot_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drag_dot_1"
            android:layout_alignStart="@id/drag_dot_1"
            android:padding="15dp"
            dot:anr="drop"
            dot:legend="Drop ANR"
            dot:radius="64dp" />

        <com.example.android.apis.view.DraggableDot
            android:id="@+id/drag_dot_hidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/drag_dot_3"
            android:layout_toEndOf="@id/drag_dot_3"
            android:padding="15dp"
            android:visibility="invisible"
            dot:legend="Surprise!"
            dot:radius="64dp" />

        <TextView
            android:id="@+id/drag_result_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/drag_explanation"
            android:layout_alignEnd="@id/drag_explanation"
            android:layout_toEndOf="@id/drag_dot_2" />

        <TextView
            android:id="@+id/drag_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/drag_dot_3"
            android:layout_alignStart="@id/drag_dot_3" />

    </RelativeLayout>
</LinearLayout>